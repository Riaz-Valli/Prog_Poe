@model Report

@using (Html.BeginForm("SubmitFeedback", "Home", FormMethod.Post, new { id = "feedbackForm" }))
{
    <div class="form-container">
        <h2 class="form-heading">Submit Your Feedback</h2>

        <label for="name">Name:</label>
        <input type="text" id="name" name="Name" required class="form-input" />

        <label for="email">Email:</label>
        <input type="email" id="email" name="Email" required class="form-input" />

        <label for="feedback">Feedback:</label>
        <textarea id="feedback" name="Feedback" required class="form-input"></textarea>

        <div class="button-container">
            <button type="submit" class="submit-button" onclick="handleSubmit(event)">Submit</button>
            <button type="button" class="back-button" onclick="window.location.href='@Url.Action("Index", "Home")'">Back to Home Page</button>
        </div>

        <div class="progress">
            <div class="progress-bar" id="progressBar"></div>
        </div>
        <p id="progressMessage" class="progress-message"></p>
    </div>
}

<style>
    body {
        margin: 0;
        padding: 0;
        background-image: url('/Images/download.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .form-container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        max-width: 600px;
        margin: 2rem auto;
        padding: 2rem;
        background-color: rgba(255, 255, 255, 0.8);
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-heading {
        text-align: center;
        font-size: 24px;
        margin-bottom: 1rem;
        color: #28a745;
    }

    .form-input {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        width: 100%;
    }

    .button-container {
        display: flex;
        gap: 10px;
    }

    .submit-button, .back-button {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        color: white;
    }

    .submit-button {
        background-color: #28a745;
    }

    .back-button {
        background-color: #6c757d;
    }

    .submit-button:hover {
        background-color: #218838;
    }

    .back-button:hover {
        background-color: #5a6268;
    }

    .progress {
        width: 100%;
        background-color: #e9ecef;
        border-radius: 5px;
        margin-top: 1rem;
    }

    .progress-bar {
        width: 0%;
        height: 20px;
        background-color: #28a745;
        border-radius: 5px;
        transition: width 0.4s ease;
    }

    .progress-message {
        text-align: center;
        margin-top: 0.5rem;
        font-size: 1rem;
        color: #333;
    }
</style>

<script>
    function handleSubmit(event) {
        event.preventDefault();

        var name = document.getElementById('name').value.trim();
        var email = document.getElementById('email').value.trim();
        var feedback = document.getElementById('feedback').value.trim();

        var progressBar = document.getElementById('progressBar');
        var progressMessage = document.getElementById('progressMessage');

        if (!name || !email || !feedback) {
            progressMessage.textContent = 'Please fill in all required fields.';
            progressBar.style.width = '0%';
            return;
        }

        progressMessage.textContent = 'Submitting feedback...';

        var width = 0;
        var interval = setInterval(function () {
            if (width >= 100) {
                clearInterval(interval);
                progressMessage.textContent = 'Feedback submitted successfully!';
                progressBar.style.width = '100%';
                document.getElementById('feedbackForm').reset();
            } else {
                width++;
                progressBar.style.width = width + '%';
            }
        }, 10);
    }
</script>
