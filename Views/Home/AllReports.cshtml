@model IEnumerable<Report>

<div class="container">
    <div class="button-container">
        <button type="button" class="back-button" onclick="window.location.href='@Url.Action("Index", "Home")'">Back to Home Page</button>
    </div>

    <h1>All Reports</h1>
    @if (Model == null || !Model.Any())
    {
        <p>No reports filed.</p>
    }
    else
    {
        <table>
            <thead>
                <tr>
                    <th>Location</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th>Attachment</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var report in Model)
                {
                    <tr>
                        <td>@report.Location</td>
                        <td>@report.Category</td>
                        <td>@report.Description</td>
                        <td>
                            @if (!string.IsNullOrEmpty(report.Attachment))
                            {
                                <a href="@Url.Content(report.Attachment)" target="_blank">View Attachment</a>
                            }
                            else
                            {
                                <span>No Attachment</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<style>
    .container {
        max-width: 1000px;
        margin: 2rem auto;
        padding: 1rem;
        background-color: #f5f5f5;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .button-container {
        margin-bottom: 1rem;
    }

    .back-button {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        color: white;
        background-color: #6c757d;
    }

        .back-button:hover {
            background-color: #5a6268;
        }

    h1 {
        text-align: center;
        color: #28a745;
        margin-bottom: 1rem;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 1rem;
    }

    thead {
        background-color: #28a745;
        color: white;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    tbody tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tbody tr:hover {
        background-color: #e2e2e2;
    }

    a {
        color: #28a745;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }

    p {
        text-align: center;
        color: #333;
        font-size: 1.2rem;
    }
</style>
