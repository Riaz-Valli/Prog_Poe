<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Events and Announcements</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f4f4f4;
        }

        h1 {
            text-align: center;
            color: #28a745;
            margin-bottom: 1rem;
        }

        form {
            max-width: 600px;
            margin: auto;
            padding: 20px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin: 10px 0 5px;
            font-weight: bold;
        }

        input[type="text"],
        input[type="date"],
        textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-bottom: 15px;
        }

        textarea {
            resize: vertical;
        }

            input[type="text"]:focus,
            input[type="date"]:focus,
            textarea:focus {
                border-color: #28a745;
                outline: none;
            }

        button {
            background-color: #28a745;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s;
            width: 100%;
        }

            button:hover {
                background-color: #218838;
            }

        #message {
            text-align: center;
            font-size: 16px;
            margin-top: 20px;
            display: none;
        }

        .success {
            color: green;
        }

        .error {
            color: red;
        }

        .progress {
            width: 100%;
            background-color: #e9ecef;
            border-radius: 5px;
            margin-top: 1rem;
        }

        .progress-bar {
            width: 0%;
            height: 20px;
            background-color: #28a745;
            border-radius: 5px;
            transition: width 0.4s ease;
        }

        .progress-message {
            text-align: center;
            margin-top: 0.5rem;
            font-size: 1rem;
            color: #333;
        }

        .back-button {
            margin-top: 20px;
            text-align: center;
        }

            .back-button button {
                background-color: #6c757d;
                color: white;
                width: auto;
            }

                .back-button button:hover {
                    background-color: #5a6268;
                }
    </style>
</head>
<body>
    <h1>Add Event and Announcement</h1>

    <section>
        <!-- Event Section -->
        <form id="eventForm">
            <h2>Event Details</h2>
            <label for="eventname">Event Name:</label>
            <input type="text" id="eventname" name="eventname" required>

            <label for="eventdescription">Description:</label>
            <textarea id="eventdescription" name="description" rows="4" required></textarea>

            <label for="category">Category:</label>
            <input type="text" id="category" name="category" required>

            <label for="eventdate">Event Date:</label>
            <input type="date" id="eventdate" name="eventdate" required>

            <button type="submit">Add Event</button>

            <!-- Progress bar -->
            <div class="progress">
                <div class="progress-bar" id="eventProgressBar"></div>
            </div>
            <p id="eventProgressMessage" class="progress-message"></p>
        </form>

        <!-- Announcement Section -->
        <form id="announcementForm">
            <h2>Announcement Details</h2>
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required>

            <label for="description">Description:</label>
            <textarea id="description" name="description" rows="4" required></textarea>

            <button type="submit">Add Announcement</button>

            <!-- Progress bar -->
            <div class="progress">
                <div class="progress-bar" id="announcementProgressBar"></div>
            </div>
            <p id="announcementProgressMessage" class="progress-message"></p>
        </form>

        <!-- Back to Home Button -->
        <div class="back-button">
            <button onclick="window.location.href='/Home/Index';">Back to Home</button>
        </div>
    </section>

    <!-- Messages -->
    <div id="message" class="success"></div>
    <div id="message" class="error"></div>

    <script>
        function startProgressBar(formId, progressBarId, progressMessageId, ajaxUrl) {
            var progressBar = document.getElementById(progressBarId);
            var progressMessage = document.getElementById(progressMessageId);

            progressMessage.textContent = 'Submitting...';
            var width = 0;
            var interval = setInterval(function () {
                if (width >= 100) {
                    clearInterval(interval);
                    progressMessage.textContent = 'Submission successful!';
                    setTimeout(function () {
                        $.ajax({
                            type: 'POST',
                            url: ajaxUrl,
                            data: $('#' + formId).serialize(),
                            success: function (response) {
                                $('#' + formId)[0].reset();
                                progressMessage.textContent = response.message;
                            },
                            error: function (xhr) {
                                progressMessage.textContent = xhr.responseJSON.message;
                            }
                        });
                    }, 500);
                } else {
                    width++;
                    progressBar.style.width = width + '%';
                }
            }, 10);
        }

        $(document).ready(function () {
            $('#eventForm').on('submit', function (e) {
                e.preventDefault();
                startProgressBar('eventForm', 'eventProgressBar', 'eventProgressMessage', '/Home/AddEvents');
            });

            $('#announcementForm').on('submit', function (e) {
                e.preventDefault();
                startProgressBar('announcementForm', 'announcementProgressBar', 'announcementProgressMessage', '/Home/AddAnnouncement');
            });
        });
    </script>
</body>
</html>
