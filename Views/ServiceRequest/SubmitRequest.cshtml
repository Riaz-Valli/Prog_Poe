@model ServiceRequestModel

<h2>Submit a Service Request</h2>

<form asp-action="SubmitRequest" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="RequesterName">Name</label>
        <input type="text" id="RequesterName" name="RequesterName" required />
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        <textarea id="Description" name="Description" required></textarea>
    </div>

    <div class="form-group">
        <label>Category</label><br>
        <label>
            <input type="radio" name="Category" value="Technical" required> Technical
        </label><br>
        <label>
            <input type="radio" name="Category" value="Non-Technical" required> Non-Technical
        </label><br>
        <label>
            <input type="radio" name="Category" value="Maintenance" required> Maintenance
        </label><br>
        <label>
            <input type="radio" name="Category" value="Other" required> Other
        </label>
    </div>


    <div class="form-group">
        <label for="Document">Upload Document</label>
        <input type="file" id="Document" name="Document" accept=".pdf, .doc, .docx, .txt" />
    </div>

    <button type="submit" class="btn-submit">Submit</button>
</form>

<button onclick="location.href='@Url.Action("Index", "Home")'" class="btn-back">Back to Home</button>

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
        background-color: #f9f9f9;
    }

    h2 {
        color: #4CAF50;
        text-align: center;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
        color: #388E3C;
    }

    input[type="text"],
    textarea,
    select,
    input[type="file"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #4CAF50;
        border-radius: 4px;
        box-sizing: border-box;
    }

    textarea {
        resize: vertical;
    }

    button.btn-submit {
        background-color: #4CAF50;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
        margin-top: 10px;
        display: block;
        width: 100%;
    }

        button.btn-submit:hover {
            background-color: #45a049;
        }

    button.btn-back {
        display: block;
        margin: 20px auto;
        padding: 10px 15px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        text-align: center;
        text-decoration: none;
        font-size: 16px;
    }

        button.btn-back:hover {
            background-color: #45a049;
        }
</style>
